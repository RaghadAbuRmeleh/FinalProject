<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Image Layer -->
    <item android:drawable="@drawable/img" android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Border Layer -->
    <item android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF000000" /> <!-- Border color -->
            <corners android:radius="8dp" /> <!-- Match the corner radius with the image -->
        </shape>
    </item>
</layer-list>
